@using Restaurant.ViewModels.Models.Menu;

@model AddMenuViewModel
@{
	ViewBag.Title = "Add Menu";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form asp-action="Add" method="post">


			<div class="mb-3">
				<label asp-for="@Model.ImageUrl" class="form-label">ImageUrl</label>
				<textarea asp-for="@Model.ImageUrl" class="form-control" aria-required="true" rows="5"></textarea>
				<span asp-validation-for="ImageUrl" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="@Model" class="form-label">Dish Type</label>
				<select asp-for="@Model.Id" class="form-control">
					@foreach (var type in @Model.MenuTypes)
					{
						<option value="@type.Id">@type.Name</option>
					}
				</select>
				<span asp-validation-for="@Model.Id" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<input class="btn btn-primary" type="submit" value="Add" />
			</div>
		</form>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}